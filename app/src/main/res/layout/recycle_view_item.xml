<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:padding="10dp"
    android:id="@+id/root_rc_item"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/flag_image_rc_item"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:contentDescription="@string/app_name"
        tools:srcCompat="@tools:sample/avatars" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/text_data_rc_item">
        <TextView
            android:id="@+id/country_name_rc_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_margin="10dp"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/country_cases_rc_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_margin="10dp"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/country_death_rc_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15sp"
            android:text="@string/app_name"
            android:textColor="#f02"
            />
    </LinearLayout>
</LinearLayout>